<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModel="clr-namespace:CyberSiberiaApp.ViewModels"
             x:Class="CyberSiberiaApp.Views.AddFlatPage"
             Title="AddFlatPage">
    <ContentPage.BindingContext>
        <ViewModel:AddFlatViewModel x:Name="VM"></ViewModel:AddFlatViewModel>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label Text="Введите номер квартиры:"></Label>
        <Entry Text="{Binding Number}"></Entry>
        <Button Command="{Binding AddFlat}" Text="Добавить"></Button>
    </VerticalStackLayout>
</ContentPage>